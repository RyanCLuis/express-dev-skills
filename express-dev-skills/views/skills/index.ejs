<%- include('../partials/header') %>
    
    <ul>
        <% skills.forEach(function(s) { %>
            <li>
                <form action="/skills/<%= s.id %>?_method=DELETE"
                    method="post"
                    class="delete-form"
                    >
                    <button type="submit">X</button>
                </form>
                <a href="/skills/<%= s.id %>"><%= s.skill %></a>
                -
                <%= s.helpful ? 'Yes' : 'No' %>
            </li>
        <% }) %>
    </ul>
    <a href="/skills/new">Add More Skills</a>

<%- include('../partials/footer') %>